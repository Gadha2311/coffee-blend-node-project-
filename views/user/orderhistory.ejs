<!-- Display order details here if needed -->
<ul class="list-group">
<% order.items.forEach(item => { %>
  <li class="list-group-item d-flex align-items-center">
    <!-- Product Image -->
    <img src="/<%= item.productDetails.images[0] %>" alt="" style="height: 100px; width: 100px; margin-right: 15px;">

    <!-- Product Details -->
    <div class=" d-flex">
      <p  style="font-size: 30px;color: #3b5d50;" class="mb-0"><%= item.productDetails.name %></p>
      <p  style="margin-left: 120px;font-size: 25px;" class="mb-0">Qty:<%= item.quantity %></p>
    </div>
  </li>
<% }); %>
</ul>
